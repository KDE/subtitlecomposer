{
    "command": "subtitlecomposer",
    "finish-args": [
        "--share=ipc",
        "--device=dri",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=host"
    ],
    "id": "org.kde.subtitlecomposer",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man"
    ],
    "rename-icon": "subtitlecomposer",
    "modules": [
        "pkg/flatpak/deps/ffmpeg/ffmpeg.json",
        "pkg/flatpak/deps/sphinxbase/sphinxbase.json",
        "pkg/flatpak/deps/pocketsphinx/pocketsphinx.json",
        {
            "buildsystem": "cmake-ninja",
            "name": "subtitlecomposer",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
